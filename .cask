################
# brew cask allows installing native apps
################

# Feed cask formulas
brew tap phinze/homebrew-cask

# Install cask
brew install brew-cask


################
# Core stuff
################

brew cask install alfred
brew cask install google-chrome

# Pretty window manager
brew cask install spectacle

# Finder extensions such as tabs
brew cask install xtrafinder

# Communications
brew cask install adium
brew cask install google-hangouts


################
# Dev stuff
################

brew cask install iterm2

# Work with images
brew cask install imagealpha
brew cask install imageoptim
brew cask install seashore

# Editors
brew cask install sublime-text
ln -fs ~/Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl /usr/local/bin/subl
brew cask install intellij-ultimate

